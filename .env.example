# Trunchbull Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Server Configuration
ENV=production
PORT=8080

# Database
DATABASE_PATH=/data/trunchbull.db
# DATABASE_ENCRYPTION_KEY=your-strong-encryption-key-here

# Schoology API Configuration
# Get these from your school's Schoology administrator
SCHOOLOGY_CONSUMER_KEY=
SCHOOLOGY_CONSUMER_SECRET=
SCHOOLOGY_BASE_URL=https://api.schoology.com/v1

# PowerSchool API Configuration
# Get these from your school district IT department
POWERSCHOOL_CLIENT_ID=
POWERSCHOOL_CLIENT_SECRET=
POWERSCHOOL_BASE_URL=https://powerschool.yourdistrict.org

# Sync Configuration
SYNC_INTERVAL=30m
SYNC_RETRY_ATTEMPTS=3

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_ASSIGNMENTS=15m
CACHE_TTL_GRADES=30m
CACHE_TTL_EVENTS=24h
CACHE_TTL_MESSAGES=10m

# Rate Limits (requests per minute)
RATE_LIMIT_SCHOOLOGY=60
RATE_LIMIT_POWERSCHOOL=30

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json or text
